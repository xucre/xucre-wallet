{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext",
      "ES2020.Promise",
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "index.d.ts"
    ],
    "types": [      
      "jest",
      "node",
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts"
  ],
  "extends": "expo/tsconfig.base"
}
